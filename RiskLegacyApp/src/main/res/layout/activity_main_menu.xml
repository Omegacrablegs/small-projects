<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Linear"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000"
    android:orientation="vertical"
    android:weightSum="60"
    tools:context="com.a11507057.paddy.digital_entropy.MainMenuActivity">


    <TextView
        android:id="@+id/WelcomeMessage"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        android:layout_weight="6"
        android:text="Welcome to Digital Entropy"
        android:textAlignment="center"
        android:textColor="#00bcd4"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.054" />

    <Button
        android:id="@+id/playButton"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        android:layout_weight="6"
        android:background="@drawable/button_border"
        android:text="Play Game"
        android:onClick="gameScreen"
        android:textColor="#00bcd4" />

    <Button
        android:id="@+id/SettingsButton"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        android:layout_weight="6"
        android:background="@drawable/button_border"
        android:text="Settings"
        android:onClick="settingScreen"
        android:textColor="#00bcd4" />

    <Button
        android:id="@+id/HowToPlayButton"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        android:layout_weight="6"
        android:background="@drawable/button_border"
        android:text="How To Play"
        android:onClick="howToPlayScreen"
        android:textColor="#00bcd4" />

    <Button
        android:id="@+id/ExitButton"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        android:layout_weight="6"
        android:background="@drawable/button_border"
        android:text="Exit"
        android:textColor="#00bcd4"
        android:onClick="quitGame"
        tools:text="Exit" />

    <ImageView
        android:id="@+id/LogoMenu"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        android:layout_weight="30"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/logo" />

</LinearLayout>
